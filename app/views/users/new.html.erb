<%= provide :title, t("layout.signup")%>
<h1><%= t("layout.signup") %></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, url: signup_path do |f| %>
            <%= render "shared/error_messages" %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            <%= f.label :gender %>
            <%= f.select :gender, gender_options,{ include_blank: t("layout.select_gender") }, { class: "form-control" } %>
            <%= f.label :date_of_birth %>
            <%= f.date_field :date_of_birth %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation, t(".password_confirmation") %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit t("layout.create_my_account"), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
